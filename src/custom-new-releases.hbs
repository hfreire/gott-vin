{{!< default}}

{{#post}}

  {{> post-hero }}

  <div class='o-wrapper'>

    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--center o-grid__col--3-4-m o-grid__col--2-3-l'>
        <article class='c-{{ post_class }} is-page'>

          <div class='c-content'>
            {{ content }}
          </div>

        </article>
      </div>
    </div>

  </div>

{{/post}}

<div class='o-wrapper'>

  <div class='o-grid js-grid'>
    {{#get 'posts' limit='all' filter='primary_tag:what-should-i-drink' }}
      {{#foreach posts}}
        {{> post-card }}
      {{/foreach}}
    {{/get}}
  </div>

  <div class='o-grid'>
    {{#if next}}
      <div class='o-grid__col o-grid__col--full'>
        <div class='c-pagination'>
          <div class='o-grid'>
            <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--1-4-l'>
              <button class='c-btn c-btn--full js-load-posts'>{{t 'More Posts' }}</button>
            </div>
          </div>
        </div>
      </div>
    {{/if}}
  </div>

  <div class='o-grid'>
    {{> index-tags }}
  </div>

  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--full'>
      <hr>
    </div>
  </div>

  <!--<div class='o-grid'>
    {{!> instagram }}
  </div>-->

</div>
